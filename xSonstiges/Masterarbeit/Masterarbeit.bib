@MISC{targett2003,
  author = {Targett, S. and Fernstr{\"o}m, M.},
  title = {Audio games: Fun for all? all for fun},
  year = {2003},
  abstract = {In this paper we investigate if it is possible to create entertaining
	computer games that use only non-speech aural feedback and if such
	games could be used for skills acquisition or in therapeutic applications.
	To answer these questions we developed two computer games, Os & Xs
	(Tic Tac Toe) and Mastermind, representing all necessary information
	through auditory display. User testing confirmed that the games were
	playable and early indications are that the games can be entertaining,
	particularly for the blind community. Testing also suggested that
	playing audio games could assist in increasing both memory and ability
	to concentrate, thus showing potential for both skills acquisition
	and therapeutic applications.},
  journal = {ICAD2003},
  owner = {Lyra},
  review = {Cites 37 Wichtige Erkenntniss zu Signaltönen.
	
	
	Ein Paper, welches grundlegend untersucht, ob das Spielen reiner Audio
	Spiele Spaß macht und ob es Fähigkeiten fördert, die auch abseits
	des Spiels nützlich sein können. Dabei wird hier tatsächlich sprachliche
	Ausgabe ausgeschlossen. 
	
	
	Dafür wurden Tic Tac Toe und Mastermind umgesetzt.
	
	Dabei wurde jedes Feld mit Hilfe von Earcons umgesetzt. 
	
	Drei aufsteigende Töne für die erste Spalte, 3 gleiche Töne für die
	mittlere Spalte und drei absteigende Töne für die dritte Spalte.
	
	Dabei hat die oberste Reihe eine hohe Frequenz, die Mittlere eine
	mittlere Frequnz und die unterste eine tiefe Frequenz.
	
	
	Ein X über zwei "swish sounds" dargestellt, ein O über ein O. Über
	das Feld wird mit den Pfeiltasten navigiert, die Markierung erfolgt
	über "enter".
	
	
	Mastermind:
	
	
	Drei Töne-folgen hier für Farben verwendet.
	
	Der Computer generiert eine zufällige dreistellige Reihe, der Spiel
	rät, in dem er rät. Ein Versuch enthält dabei auch drei Felder. Die
	Reihenfolge wird über die Übermittlungsfolge festgelegt, die Auswahl
	der Farben erfolgt über die Pfeiltasten, das Bestätigen mit "enter".
	Der Computer antwortet mit drei verschieden Tönen: Right Sound Right

@INCOLLECTION{berger2012,
  author = {Berger, F. and M{\"u}ller, W.},
  title = {Towards an Open Source Game Engine for Teaching and Research},
  booktitle = {Transactions on Edutainment VIII},
  publisher = {Springer Berlin Heidelberg},
  year = {2012},
  volume = {7220},
  series = {Lecture Notes in Computer Science},
  pages = {69-76},
  month = {07},
  __markedentry = {[Lyra:]},
  abstract = {Abstract. When introducing students without in-depth programming experience
	to the development of educational games, an off-the-shelf game engine
	will not fit, especially when users are meant to directly interact
	with the underlying framework. To accommodate this scenario and still
	be able to provide state-of-the-art features, we are developing the
	custom game engine “Fabula”. A software stack of Python, Pygame and
	Twisted ensures an accessible, yet powerful application core, undemanding
	cross-platform visuals and field-tested networking. Fabula's game
	world abstraction aims to be intuitive to people who have not been
	involved in game development before, while at the same time being
	general enough to fit several genres. The engine's goal to help students
	explore the creation of enjoyment, emotional responses and social
	experiences in a game context, keeping the hassle with technical
	details at a low level, will be evaluated using the Technology Acceptance
	Model (TAM).},
  doi = {10.1007/978-3-642-31439-1_7},
  isbn = {978-3-642-31438-4},
  keywords = {educational games; game engine; edutainment; cross-platform; game
	development},
  owner = {Lyra},
  review = {Cites 2
	
	
	Fabula Game World Abstraktion:
	
	
	Room
	
	Kapselt einen räumlich abgeschlossenen Ort
	
	Datenstruktur: Graph mit diskreten Positionen (zweidimensionales Tile-Raster)
	
	Tiles können begehbar (FLOOR) oder unbegehbar sein (OBSTACLE)
	
	
	Entity
	
	Kapselt einen virtuellen Charakter oder einen Gegenstand
	
	
	Pro Client wird ein Charakter gesteuert, andere Charaktere werden
	entweder vom Server oder von anderen Spielern auf entfernten Geräten
	kontrolliert.
	
	Alle andere Entities sind Items.
	
	
	Jede Entity befindet sich auf einem Tile im Room.
	
	
	Mögliche Aktionen:
	
	Bewegung im Raum
	
	Ansehen und Manipulation von Items
	
	Items einsammeln (ins Inventar ablegen)
	
	Items auf tiles oder anderen Items ablegen, oder an NPCs geben
	
	Mit anderen Charakteren sprechen
	
	
	Architektur und Komponenten Design:
	
	
	Client Server kommunisieren über Events
	
	Mehrere Events werden zu Messages gebündelt
	
	
	Alle möglichen Spieler Aktionen resultieren in ein Event, beispielsweise
	TriesToMoveEvent, TriesToLookAtEvent, und sind abgeleitet von der
	AttemptEvent Klasse
	
	
	Der Server beantwortet die Events mit einer Instanz eines ConfirmEvents
	(PicksUpEvent oder MovesToEvent)
	
	
	Der Game State ist also auf dem Server und der Client muss diesen
	Zustand kopieren und anzeigen
	
	
	Es gibt außerdem Events zum spawnen und löschen von Entities, wechseln
	von Tiles und Raumwechsel.
	
	
	Symmetrisches Layout für Server und Client: Engine, Plugin und Interface
	
	
	Das Interface kapselt die Netzwerk Übertragung über grab ans send
	API
	
	(2 Varianten: TCP Netzwerk oder Client-Server auf der gleichen Maschiene
	für Einzelspieler Modus)
	
	Der Server verwaltet mehrere Clients über einen MessageBuffer für
	jeden Client. Und verarbeitet die Nachrichten reih um
	
	und sendet die Ergebnisse an alle Spieler des selben Raums.
	
	
	Die Engine verwaltet den Game State, empfängt und sendet Messages
	an das Interface und ruft das Plugin regelmäßig auf.
	
	
	Das Plugin hat unterschiedliche Aufgaben in jedem Teil.
	
	
	Das serverseitige Plugin implementiert die Spiellogik, jedes Aktion
	des Spielers wird geprüft,
	
	und wenn es in Ordnung ist, an das Plugin weiter gereicht.
	
	Für jedes Spiel muss eine maßgeschneiderte Logik implementiert werden.
	
	Fabula beinhaltet einen intuitiven GUI Editor, der dem Benutzer das
	Erstellen einer einfacher Bedingung-Reaktions-Logik ermöglicht.
	
	Wenn Spieler Aktionen ausgeführt werden, wird ein eine bereits passende
	Reaktions message gesucht. Wenn keine gefunden wird,
	
	wird der Benutzer aufgefordert eine neue zu erstellen. Die resultierende
	Game Logik wird in der Konfiguration-Datei gespeichert.
	
	
	Das clientseitige Plugin implementiert die Benutzer-Schnittstelle,
	das tatsächliche grafische (oder akustische) Rendern des Spield
	
	und die Interaktions Punkte mit dem Benutzer. Die Darstellung des
	abstrakten Game States und wie die Sammlung von Input erfolgt,
	
	ist vollkommen frei.
	
	
	Die Basis Bausteine Room, Entity, Engin und Plugin erben von einer
	gemeinsamen Basis Klasse und haben daher die gleich API.
	
	
	Zusätzlich stellt Fabula einen Asset manager bereit um Mediadateien
	wie 2D-Grafiken, Audio vom lokalen Dateisystem oder über das
	
	Netzwerk zu holen und zwischenzuspeichern um sie für das User Interface
	bereit zu stellen.},
  timestamp = {2013.02.01},
  url = {\url{http://dx.doi.org/10.1007/978-3-642-31439-1_7}}
}

@INPROCEEDINGS{brewster1993,
  author = {Brewster, S. A. and Wright, P. C. and Edwards, A. D. N.},
  title = {An evaluation of earcons for use in auditory human-computer interfaces},
  booktitle = {Proceedings of the INTERACT'93 and CHI'93 conference on Human factors
	in computing systems},
  year = {1993},
  series = {CHI '93},
  pages = {222--227},
  address = {New York, NY, USA},
  publisher = {ACM},
  abstract = {An evaluation of earcons was carried out to see whether they are an
	effective means of communicating information in sound. An initial
	experiment showed that earcons were better than unstructured bursts
	of sound and that musical timbres were more effective than simple
	tones. A second experiment was then carried out which improved upon
	some of the weaknesses shown up in Experiment 1 to give a significant
	improvement in recognition. From the results of these experiments
	some guidelines were drawn up for use in the creation of earcons.
	Earcons have been shown to be an effective method for communicating
	information in a human-computer interface.},
  acmid = {169179},
  doi = {10.1145/169059.169179},
  isbn = {0-89791-575-5},
  keywords = {auditory interfaces, earcons, sonification},
  location = {Amsterdam, The Netherlands},
  numpages = {6},
  owner = {Lyra},
  review = {cites 250
	
	
	Definition Earcons:
	
	
	Earcons are abstract, synthetic tones that can be used in structured
	combinations to create sound messages to represent parts of an interface.
	
	
	Blattner et al. define earcons as “non-verbal audio messages that
	are used in the computer/user interface to provide information to
	the user about some computer object, operation or interaction”.
	
	
	Earcons are composed of motives, which are short, rhythmic sequences
	of pitches with variable intensity, timbre and register.
	
	
	Testergebnisse
	
	
	The work shown has demonstrated that earcons are better for presenting
	information than unstructured bursts of sound.
	
	
	Guidelines für earcons:
	
	
	Timbre (Klangfarbe) - am besten unterschiedliche künstliche Musikinstrumente
	mit mehreren Harmonien.
	
	
	Pitch - nur als alleiniges Erkennungsmerkmal verwenden, wenn die Unterschiede
	sehr groß sind
	
	
	Register - nur als alleiniges Erkennungsmerkmal verwenden, wenn die
	Unterschiede sehr groß sind (3 oder merh Oktaven)
	
	
	Rhythmus - möglichst unterschiedlich (zB. unterschiedliche Notenanzahl)
	
	
	Intensität - möglichst auf einem Level, nicht zu laut (nervt), nicht
	zu leise (geht in der Hintergrundmusik unter)
	
	
	Kombinationen - mehrere earcons in Kombination sollten mit einer 0.1
	s langen Pause abgespielt werden},
  timestamp = {2013.07.03},
  url = {\url{http://doi.acm.org/10.1145/169059.169179}}
}

